#include<stdio.h>
void main()
{
    int n,i,j,temp;
    printf("Enter the number of processses\n");
    scanf("%d",&n);
    int p[n],bt[n],wt[n],tat[n];
    printf("Enter process and corresponding burst time\n");
    for(i=0;i<n;i++)
    scanf("%d%d",&p[i],&bt[i]);
    
    for(i=0;i<n;i++){
        for(j=i+1;j<n;j++){
            if(bt[i]>bt[j]){
                temp=bt[i];
                bt[i]= bt[j];
                bt[j]=temp;
                
                temp=p[i];
                p[i]=p[j];
                p[j]=temp;
            }
        }
    }
  wt[0]=0,tat[0]=bt[0];
  
  float tot_wt=wt[0],tot_tat=tat[0];
  
  for(i=1;i<n;i++){
      wt[i]=wt[i-1]+bt[i-1];
      tat[i]=tat[i-1]+bt[i];
      tot_wt=tot_wt+wt[i];
      tot_tat=tot_tat+tat[i];
  }
  printf("Process\tbt\twt\ttat\n");
  for(int i=0;i<n;i++){
      printf("%d\t%d\t%d\t%d\n",p[i],bt[i],wt[i],tat[i]);
  }}

OUTPUT:
Enter the number of processses
3
Enter process and corresponding burst time
1 10
2 5
3 3
Process bt      wt      tat
3       3       0       3
2       5       3       8
1       10      8       18

   
